{% extends 'base.html.twig' %}

{% block body %}

    <style>
        .clearfix:after {
            content: '';
            display: table;
            width: 100%;
            clear: box;
        }

        .header {
            background: #363636;
        }

        .header a {
            color: #FFFFFF;
            font-size: 20px;
            float: right;
            margin: 15px;
        }

        .header a:hover {
            color: #727272;
            text-decoration: none;
        }
    </style>

    <div class="container-fluid header clearfix">
        <a href="{{ '/inscription' }}">Registration</a>
        <a href="{{ '/home' }}">Home page</a>
    </div>

    <div class="container" style="margin-top: 50px">

        <h1 style="text-align: center">Login</h1>

        <br>

        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <label>Email</label>
                <input placeholder="email" required name="_username" type="text" class="form-control">
            </div>
            <label>Password</label>
            <div class="form-group">
                <input placeholder="password" required name="_password" type="password" class="form-control">
            </div>
            <br>
            <div class="form-group" style="text-align: center">
                <button type="submit" class="btn btn-success col-md-2">Login</button>
            </div>
        </form>
    </div>

{% endblock %}